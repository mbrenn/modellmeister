<Window x:Class="mbgi_gui.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Model Based Source Generator" Height="800" Width="1000"
        WindowStartupLocation="CenterScreen"
        Loaded="Window_Loaded">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="75*" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="25*" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>
        <TextBox x:Name="txtWorkspacePath"></TextBox>
        <TextBox Grid.Column="0" Grid.Row="1" Margin="5" x:Name="txtMBGISource" AcceptsReturn="True"
                 TextWrapping="Wrap"></TextBox>
        <Button Content="Execute" Grid.Row="2" Margin="5" Padding="3"/>
        <Button x:Name="btnGenerateSource"  Content="Generate Source" 
                Grid.Row="2" Margin="5" Padding="3" Click="btnGenerateSource_Click" />
        <TextBox Grid.Column="1" Grid.Row="1" Margin="5" x:Name="txtUserCs" AcceptsReturn="True" 
                 HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Auto"
                 TextWrapping="Wrap"></TextBox>
        <Button x:Name="btnSimulateSource" Content="Simulate Source" 
                Grid.Row="2" Grid.Column="1" Margin="5" Padding="3" Click="btnSimulateSource_Click" />
        <TextBox x:Name="txtLog" Grid.Column="0" Grid.ColumnSpan="2" 
                 HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Auto"
                 Grid.Row="3"  Margin="5" IsReadOnly="True" AcceptsReturn="True"></TextBox>
    </Grid>
</Window>
